generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Program {
  id          String   @id @default(uuid())
  title       String
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}

model Gallery {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?  @default("")
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  message   String
  createdAt DateTime @default(now())
}